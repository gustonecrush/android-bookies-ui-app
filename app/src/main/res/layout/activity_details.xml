<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:fillViewport="true"
    android:scrollbars="none"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <!--  Navigation Section  -->
        <RelativeLayout
            android:id="@+id/navigation_section"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/card_color"
            android:paddingHorizontal="20dp"
            android:paddingVertical="25dp"
            >

            <LinearLayout
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fi_arrow_left"
                    android:padding="10sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ic_loved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fi_heart"
                    android:padding="10sp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <!--  Jumbotron Section  -->
        <LinearLayout
            android:id="@+id/jumbotron_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_section"
            android:layout_centerInParent="true"
            android:layout_marginTop="-90sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >

            <!--  Cover  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/content_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:src="@drawable/content_4_big" />
            </LinearLayout>

            <!--  Title - Genre  -->
            <LinearLayout
                android:id="@+id/title_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="The Power of Hooked"
                    android:textColor="@color/txt_primary"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Growth Bussiness"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/txt_gray" />
            </LinearLayout>

            <!--  Decoration  -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dots"
                android:layout_gravity="center"
                android:layout_marginVertical="15sp"
                />

            <!--  Author  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="By Nir Eyal"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/txt_primary" />

        </LinearLayout>

        <!--  Synopsis Section  -->
        <LinearLayout
            android:id="@+id/synopsis_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumbotron_section"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Synopsis"
                android:textSize="15sp"
                android:layout_marginTop="15sp"
                android:textColor="@color/txt_gray" />
            <TextView
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Why do some products capture wide spread attention while others what makes us engage with people."
                android:textSize="15sp"
                android:lineHeight="28sp"
                android:layout_marginTop="5sp"
                android:textColor="@color/txt_primary" />
        </LinearLayout>

        <!--  Keypoints Section  -->
        <LinearLayout
            android:id="@+id/keypoints_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/synopsis_section"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Key Points"
                android:textSize="15sp"
                android:layout_marginTop="15sp"
                android:textColor="@color/txt_gray" />

            <LinearLayout
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/synopsis_section"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_list"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Medium chart of team pro"
                        android:textSize="15sp"
                        android:textColor="@color/txt_primary"
                        android:layout_marginLeft="10sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_list"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Perdalam notifications"
                        android:textSize="15sp"
                        android:textColor="@color/txt_primary"
                        android:layout_marginLeft="10sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_list"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Membuat funnel marketing"
                        android:textSize="15sp"
                        android:textColor="@color/txt_primary"
                        android:layout_marginLeft="10sp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--  Button  -->
        <Button
            android:id="@+id/btn_read"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/keypoints_section"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/btn_color"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:text="Read Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</ScrollView>